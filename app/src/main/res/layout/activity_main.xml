<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:background="#E4DADA"
    tools:context=".MainActivity">
<TextView
    android:id="@+id/memeTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:text="@string/meme_app"
    android:padding="20dp"
    android:textColor="#B4F321"
    style="@style/TextAppearance.Material3.BodyLarge"

    android:gravity="center"
    android:layout_margin="10dp"
    />
    <ImageView
        android:id="@+id/meme1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/imageHeight"
        android:contentDescription="@string/meme"
        android:scaleType="fitXY"
        android:layout_marginBottom="20dp"
        android:src="@drawable/meme1" />

    <ImageView
        android:id="@+id/meme2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/imageHeight"
        android:contentDescription="@string/meme2"
        android:scaleType="fitXY"
        android:src="@drawable/meme2" />

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="meme"
            android:fontFamily="sans-serif-black"
            android:textColor="#4821F3"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/userName"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:text="@string/test"
            android:textColor="@color/nameColor"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>